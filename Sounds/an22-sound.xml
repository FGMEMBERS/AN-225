  <!-- Doors -->
  
    <door>
      <name>Cargo door</name>
      <path>Aircraft/Antonov-An-22/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </door>
    
    <door>
      <name>Cargo doorT</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/door_close.wav</path>
      <condition>
       <and>
	<greater-than>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[13]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.12</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </door>

    <door>
      <name>Passenger doorL</name>
      <path>Aircraft/Antonov-An-22/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger doorLT</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/door_close.wav</path>
      <condition>
        <and>
	<greater-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[0]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.11</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger doorR</name>
      <path>Aircraft/Antonov-An-22/Sounds/door_closed.wav</path>
      <condition>
        <equals>
          <property>sim/multiplay/generic/float[1]</property>
          <value>0.0</value>
        </equals>
      </condition>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>
    
    <door>
      <name>Passenger doorRT</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/door_close.wav</path>
      <condition>
        <and>
	<greater-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>0.01</value>
        </greater-than>
	<less-than>
          <property>sim/multiplay/generic/float[1]</property>
          <value>0.99</value>
        </less-than>
       </and>
      </condition>
      <volume>
        <factor>0.11</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </door>

        <!-- Wind -->

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/wind.wav</path>
      <property>/environment/wind-speed-kt</property>
      <volume>
        <property>/environment/wind-speed-kt</property>
        <factor>0.0025</factor>
        <min>0.00</min>
        <max>0.20</max>
      </volume>
      <pitch>
        <property>/environment/wind-speed-kt</property>
        <factor>0.01</factor>
        <offset>0.2</offset>
        <max>0.70</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </wind>
    
    <!-- Rain -->
    
    <rain>
      <name>rain</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/rain_canopy.wav</path>
      <condition>
        <greater-than>
          <property>/environment/metar/rain-norm</property>
          <value>0.2</value>
        </greater-than>
      </condition>
      <volume>
        <property>/environment/metar/rain-norm</property>
        <factor>1.00</factor>
        <offset>-0.2</offset>
        <min>0.0</min>
        <max>0.6</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.001</factor>
        <offset>0.50</offset>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rain>
    
            <!-- ADF-MorseCode, see txt file -->

    <ADF>
      <name>ADF1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/Morse.wav</path>
       <condition>        
          <property>/instrumentation/adf[0]/in-range</property>         
       </condition>
      <volume>
	<property>instrumentation/adf[0]/volume</property>	
        <min>0.00</min>
        <max>1.0</max>
      </volume>      
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </ADF>
    
    <ADF>
      <name>ADF2</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/Morse.wav</path>
       <condition>        
          <property>/instrumentation/adf[1]/in-range</property>        
       </condition>
      <volume>	
	<property>instrumentation/adf[1]/volume</property>
        <min>0.00</min>
        <max>1.0</max>
      </volume>      
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </ADF>

  </fx>

</PropertyList>
