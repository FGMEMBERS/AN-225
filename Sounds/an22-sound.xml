<?xml version="1.0" encoding="ISO-8859-1"?>
 
<PropertyList>

  <fx>

  <!-- Engines 1 -4 starting up-->
    <crank>
      <name>engstart1</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </crank>
    
    <crank>
      <name>engstart2</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart3</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart4</name>
      <path>Aircraft/Antonov-An-22/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
  
  <!-- Engines 1 -4 running -->

    <engine>
       <name>engine0</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00022</factor>
        <min>0.06</min>
        <max>0.55</max>        
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00022</factor>
        <min>0.06</min>
        <max>0.55</max>        
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine2</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00022</factor>
        <min>0.06</min>
        <max>0.55</max>        
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <engine>
       <name>engine3</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/running.wav</path>      
        <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00022</factor>
        <min>0.06</min>
        <max>0.55</max>        
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00008</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>
    
    <!-- Rumble on runway -->

    <rumble>
      <name>rumble1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/24roll.wav</path>
      <condition>
          <property>/gear/gear[0]/wow</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.25</factor>
	<min>0.0</min>
        <max>0.85</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble2</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/24roll.wav</path>
      <condition>
        <or>          
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[13]</property>
        <type>log</type>
        <factor>0.25</factor>
	<min>0.0</min>
        <max>0.85</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>

    <!-- Gear in and out -->
    
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/Antonov-An-22/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <!-- Touchdown -->
    
    <squeal>
      <name>squeal1</name>
      <mode>once</mode>
      <path>Aircraft/Antonov-An-22/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[0]/wow</property>                 
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>
    
    <squeal>
      <name>squeal2</name>
      <mode>once</mode>
      <path>Aircraft/Antonov-An-22/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[2]/wow</property>          
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>
 
 <!-- Flaps -->
 
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/Antonov-An-22/Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.35</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </flap>
    


     <!-- Speed Warning -->
 
    <speedwarn>
      <name>warn1</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/dinamik_pr2.wav</path>
       <condition>
        <greater-than>
	 <property>velocities/groundspeed-kt</property>
	 <value>419</value>
         </greater-than>
        </condition> 
      <volume>
	<offset>1.0</offset>
	<min>1.0</min>
        <max>1.0</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </speedwarn>

    
 <!-- Stall -->
 
    <stall>
      <name>stall</name>
      <mode>looped</mode>
      <path>Aircraft/Antonov-An-22/Sounds/stall.wav</path>
      <property>/sim/alarms/stall-warning</property>
      <volume>
        <property>/sim/alarms/stall-warning</property>
        <max>1.0</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </stall>
    
