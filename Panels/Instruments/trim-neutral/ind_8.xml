<!--Controls-->

<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>controls/flight/rudder-trim</property>
      <value>0.0</value>
    </binding>
  </action>
</animation>

