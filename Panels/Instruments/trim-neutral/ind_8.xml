  <object-name>cover_1</object-name>
  <object-name>cover_2</object-name>
  <object-name>cover_3</object-name>
  <object-name>cover_4</object-name>
  <object-name>cover_5</object-name>
</effect>


<!--Indicators-->

<animation>
  <type>material</type>
  <object-name>text_1</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor>1</factor>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>text_2</object-name>
   <condition>
    <or>
     <less-than>
      <property>controls/flight/rudder-trim</property>
      <value>0</value>
     </less-than>
     <greater-than>
      <property>controls/flight/rudder-trim</property>
      <value>0</value>
     </greater-than>
    </or>
   </condition>
   <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>text_3</object-name>
   <condition>
    <or>
     <less-than>
      <property>controls/flight/aileron-trim</property>
      <value>0</value>
     </less-than>
     <greater-than>
      <property>controls/flight/aileron-trim</property>
      <value>0</value>
     </greater-than>
    </or>
   </condition>
   <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>text_4</object-name>
   <condition>
    <or>
     <less-than>
      <property>controls/flight/elevator-trim</property>
      <value>0</value>
     </less-than>
     <greater-than>
      <property>controls/flight/elevator-trim</property>
