<!-- Light switches block
3D instrument for Tu-154 -->
<PropertyList>
 <path>bano.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle_1</object-name>
  <object-name>handle_2</object-name>
  <object-name>handle_3</object-name>
  
  
    <emission>
      <factor-prop>tu154/switches/gauge-light</factor-prop>
      <red>   0.21 </red>
      <green> 0.21 </green>
      <blue>  0.21 </blue>
    </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>base_1</object-name>
  <object-name>base_2</object-name>
  <object-name>base_3</object-name>
  <object-name>base_4</object-name>
  
    <emission>
      <factor>1</factor>
      <red>   0.25 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
</animation>
  
<animation>
  <type>rotate</type>
  <object-name>handle_1</object-name>
  <property>tu154/switches/bano</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>controls/lighting/nav-lights</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_3</object-name>
  <property>tu154/switches/gauge-light</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/bano", 1.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/bano", 0.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("controls/lighting/nav-lights", 1.0, 0.1 );        
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_4</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("controls/lighting/nav-lights", 0.0, 0.1 );        
      </script>
    </binding>
  </action>
</animation>


<animation>
  <type>pick</type>
  <object-name>hotspot_5</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    
     
     <binding>
        <command>nasal</command>
          <script>
             interpolate("tu154/switches/gauge-light", 1.0, 0.1 );
          </script>
     </binding>
  </action>
</animation>

