<?xml version="1.0"?>

<!--
-->

<PropertyList>

  <name>Digital Glideslope info display</name>
  <w-base>148</w-base>
  <h-base>30</h-base>

  <layers>

<!-- Background -->
    <layer>
      <name>background</name>
      <texture>
        <path>Aircraft/AN-225/Panels/Instruments/Textures/trans-green-bg.rgb</path>
      </texture>
      <w>148</w>
      <h>30</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>74</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>15</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Title -->
    <layer>
      <name>Title1</name>
      <type>text</type>
      <point-size>14</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>GS</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>3</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>18</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Title2</name>
      <type>text</type>
      <point-size>14</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>INF</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>3</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>3</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Unclamped climb rate -->
    <layer>
      <name>Unclamped CR Title</name>
      <type>text</type>
      <point-size>14</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>UCl c-rt:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>40</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>18</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Unclamped climb rate Display</name>
      <type>text</type>
      <font>led</font>
      <point-size>5</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/instrumentation/nav/gs-rate-of-climb</property>
          <format>%04.1f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>104</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>18</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Clamped climb rate -->
    <layer>
      <name>Clamped CR Title</name>
      <type>text</type>
      <point-size>14</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>Clp c-rt:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>40</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>3</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Unclamped climb rate Display</name>
      <type>text</type>
      <font>led</font>
      <point-size>5</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/autopilot/internal/clamped-gs-rate-of-climb</property>
          <format>%04.1f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>104</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>3</offset>
        </transformation>
      </transformations>
    </layer>

  </layers>
</PropertyList>
