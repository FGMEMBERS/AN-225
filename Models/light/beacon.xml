<PropertyList>

  <path>strobe-orange.ac</path>

  <animation>
    <type>noshadow</type>
    <object-name>strobe</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>strobe</object-name>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
  </effect>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>strobe</object-name>
    <spherical type="bool">true</spherical>
  </animation>

  <animation>
    <type>select</type>
    <object-name>strobe</object-name>
    <condition>
      <property>/sim/model/lights/beacon/state</property>
    </condition>
  </animation>
  
  <animation>
		<type>scale</type>
		<x-offset>2</x-offset>
                <y-offset>2</y-offset>
                <z-offset>2</z-offset>                
  </animation>

  <animation>
    <type>material</type>
    <object-name>strobe</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>strobe</object-name>
    <interpolation>
      <entry><ind>    0 </ind><dep> 0.8 </dep></entry>
      <entry><ind>   20 </ind><dep> 1.6 </dep></entry>
      <entry><ind> 1500 </ind><dep> 4 </dep></entry>
    </interpolation>
  </animation>
