 <PropertyList>
   
   <path>lights-cone-taxi-12.ac</path>
   
   <animation>
     <object-name>Spot</object-name>          
   </animation> 
   
 <animation>
  <type>scale</type>
  <object-name>Spot</object-name>
  <property>sim/multiplay/generic/int[10]</property>
  <offset>0</offset>
  <x-max>1</x-max>
  <y-max>2</y-max>
  <z-max>1</z-max>
  <x-factor>1</x-factor>
  <y-factor>2</y-factor>
  <z-factor>1</z-factor>
 </animation>
   
<animation>
  <type>select</type>
     <object-name>Spot</object-name>      
  <condition>
    <and>
    	<not><property>/sim/rendering/rembrandt/enabled</property></not>
	    <property>sim/multiplay/generic/int[10]</property>
    </and>
  </condition>
</animation>
  
  
   <animation>
     <type>material</type>
     <object-name>Spot</object-name>       
     <emission>
       <red>   0.351 </red>
       <green> 0.351 </green>
       <blue>  0.271 </blue>
     </emission>
   </animation>



</PropertyList>
